{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": ["google"],
    "globals": {
        "DEBUG": true,
        "process": true,
        "require": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "arrowFunctions":true,
            "experimentalObjectRestSpread": true
        }
    },
    "plugins": [
        "babel",
        "html"
    ],
    "rules": {
        "linebreak-style": 0,
        "no-undef": 2,
        "keyword-spacing": 2,
        "no-multi-spaces": 2,
        "space-infix-ops": 2,
        "no-multiple-empty-lines": [2, { "max": 1, "maxBOF": 0}],
        "comma-dangle": 2,
        "complexity": [2, 10],
        "computed-property-spacing": ["error", "always"],
        "curly": 2,
        "default-case": 2,
        "eqeqeq": 2,
        "eol-last": 2,
        "guard-for-in": 2,
        "indent": [2, 2, {"SwitchCase": 1}],
        "max-depth": [2, 3],
        "max-len": [2, 120],
        "max-params": [2, 7],
        "new-cap": 0,
        "no-bitwise": 0,
        "no-debugger": 2,
        "no-dupe-args": 2,
        "no-dupe-keys": 2,
        "no-else-return": 2,
        "no-empty": 2,
        "no-eval": 2,
        "no-implicit-coercion": 0,
        "no-inline-comments": 0,
        "no-loop-func": 2,
        "no-multi-str": 2,
        "no-negated-condition": 0,
        "no-new-wrappers": 2,
        "no-octal": 2,
        "no-redeclare": 2,
        "no-shadow": 2,
        "no-shadow-restricted-names": 2,
        "no-throw-literal": 0,
        "no-trailing-spaces": 2,
        "no-unexpected-multiline": 2,
        "no-unreachable": 2,
        "no-use-before-define": 2,
        "no-unused-expressions": 0,
        "no-unused-vars": 2,
        "object-curly-spacing": ["error", "always"],
        "operator-linebreak": ["error", "after", { "overrides": { "?": "before", ":": "before" } }],
        "one-var": 0,
        "quotes": [2, "single", "avoid-escape"],
        "semi": ["error", "never"],
        "spaced-comment": 0,
        "valid-jsdoc": [2, {
            "requireParamDescription": false,
            "requireReturn": false,
            "requireReturnDescription": false
        }],
        "require-jsdoc": [2, {
            "require": {
                "FunctionDeclaration": false,
                "MethodDefinition": false,
                "ClassDeclaration": true,
                "ArrowFunctionExpression": false
            }
        }],
        // ES6 specific ones
        "arrow-spacing": "error",
        "no-class-assign": "error",
        "no-const-assign": "error",
        "no-dupe-class-members": "error",
        "no-duplicate-imports": "error",
        "require-yield": "error"
    }
}
