{
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true,
    "jest/globals": true
  },
  "plugins": [
    "import",
    "jest",
    "jsdoc",
    "node",
    "promise",
    "standard",
    "vue"
  ],
  "extends": [
    "standard",
    "plugin:vue/essential"
  ],
  "globals": {
    "BUILD_TYPE": true,
    "DEBUG": true,
    "process": true,
    "require": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "path": [
          "src"
        ]
      }
    },
    "import/extensions": [
      ".js"
    ],
    "import/ignore": [
      "node_modules"
    ]
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "never",
        "named": "always",
        "asyncArrow": "always"
      }
    ],
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "semi": [2, "never"],
    "comma-dangle": ["error", {
      "arrays": "always-multiline",
      "objects": "always-multiline",
      "imports": "always-multiline",
      "exports": "always-multiline",
      "functions": "never"
    }],
    "no-prototype-builtins": "off"
  }
}
